{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",

  "include": ["root/*"],
  "exclude": ["node_modules"]
}
